"use client";

import { useState, useEffect } from "react";
import { useRouter } from "next/navigation";
import Link from "next/link";
import { type GuestData } from "@/lib/guest-list";

export default function AdventureDay2() {
  const router = useRouter();
  const [guestData, setGuestData] = useState<GuestData | null>(null);
  const [preferences, setPreferences] = useState({
    adults: guestData?.adults || 1,
    children: guestData?.children || 0
  });

  useEffect(() => {
    const stored = localStorage.getItem('montana-adventure-guest');
    if (!stored) {
      router.push('/guest-check-in');
      return;
    }
    const data = JSON.parse(stored);
    if (!data.day1) {
      router.push('/adventure/day-1');
      return;
    }
    setGuestData(data);
  }, [router]);

  const handleActivityToggle = (activity: string) => {
    setPreferences(prev => ({
      ...prev,
      receptionActivities: prev.receptionActivities.includes(activity)
        ? prev.receptionActivities.filter(a => a !== activity)
        : [...prev.receptionActivities, activity]
    }));
  };

  const handleContinue = () => {
    if (!guestData) return;
    
    const updatedData = {
      ...guestData,
      day2: preferences,
      lastCompletedDay: 2
    };
    localStorage.setItem('montana-adventure-guest', JSON.stringify(updatedData));
    router.push('/adventure/day-3');
  };

  if (!guestData) {
    return <div className="min-h-screen bg-warm-gray-900 flex items-center justify-center">
      <div className="text-cream-100">Loading your adventure...</div>
    </div>;
  }

  const receptionOptions = [
    'Dancing', 'Outdoor games', 'Stargazing', 'Campfire stories', 
    'Photography moments', 'Quiet conversation areas', 'Live music', 'Cocktail mixing'
  ];

  return (
    <div className="min-h-screen bg-warm-gray-900">
      {/* Navigation */}
      <nav className="fixed top-0 left-0 right-0 bg-warm-gray-900/90 backdrop-blur-sm border-b border-warm-gray-700 z-50">
        <div className="max-w-6xl mx-auto px-4 sm:px-6">
          <div className="flex justify-between items-center py-4">
            <Link href="/" className="text-2xl font-serif text-cream-100">
              Angela & Jeff
            </Link>
            <div className="text-sm text-cream-300">
              Day 2 of 5
            </div>
          </div>
        </div>
      </nav>

      <div className="pt-24 pb-12">
        <div className="max-w-4xl mx-auto px-4 sm:px-6">
          
          {/* Welcome Back */}
          <div className="text-center mb-8">
            <h1 className="text-3xl md:text-5xl font-serif text-cream-100 mb-4">
              Wednesday, July 23rd
            </h1>
            <h2 className="text-xl md:text-2xl text-dusty-rose-300 mb-6">
              üíï The Big Day: Angela & Jeff&apos;s Wedding!
            </h2>
            <p className="text-lg text-cream-200 max-w-3xl mx-auto">
              It&apos;s happening! Today is the day we&apos;ve all been waiting for. Let&apos;s make sure 
              everything is perfect for Angela & Jeff&apos;s special moment.
            </p>
          </div>

          {/* Day Preview */}
          <div className="bg-dusty-rose-900 rounded-2xl p-8 border border-dusty-rose-700 mb-8">
            <h3 className="text-2xl font-serif text-cream-100 mb-6">Wedding Day Timeline</h3>
            
            <div className="grid md:grid-cols-2 gap-6">
              <div className="bg-dusty-rose-800 rounded-xl p-6 border border-dusty-rose-600">
                <h4 className="text-lg font-semibold text-cream-100 mb-3">üåÖ 4:00 PM - Ceremony</h4>
                <p className="text-cream-200 text-sm">
                  Outdoor ceremony with stunning Montana mountain views as the backdrop.
                </p>
              </div>
              
              <div className="bg-dusty-rose-800 rounded-xl p-6 border border-dusty-rose-600">
                <h4 className="text-lg font-semibold text-cream-100 mb-3">üéâ 6:00 PM - Reception</h4>
                <p className="text-cream-200 text-sm">
                  Dinner, dancing, and celebration under the Montana sky!
                </p>
              </div>
              
              <div className="bg-dusty-rose-800 rounded-xl p-6 border border-dusty-rose-600">
                <h4 className="text-lg font-semibold text-cream-100 mb-3">üì∏ 5:00 PM - Photos</h4>
                <p className="text-cream-200 text-sm">
                  Golden hour photos with the wedding party and family.
                </p>
              </div>
              
              <div className="bg-dusty-rose-800 rounded-xl p-6 border border-dusty-rose-600">
                <h4 className="text-lg font-semibold text-cream-100 mb-3">‚≠ê 10:00 PM - Afterparty</h4>
                <p className="text-cream-200 text-sm">
                  Extended celebration for night owls with campfire and stargazing.
                </p>
              </div>
            </div>
          </div>

          {/* Planning Form */}
          <div className="bg-sage-900 rounded-2xl p-8 border border-sage-700">
            <h3 className="text-2xl font-serif text-cream-100 mb-6">Help Us Perfect Your Wedding Experience</h3>
            
            <div className="space-y-6">
              <div>
                <label className="block text-sm font-medium text-cream-100 mb-2">
                  Will you be staying for the entire celebration?
                </label>
                <select
                  value={preferences.weddingAttendance}
                  onChange={(e) => setPreferences(prev => ({ ...prev, weddingAttendance: e.target.value }))}
                  className="w-full px-4 py-3 rounded-lg border border-sage-600 bg-sage-800 text-cream-100 focus:border-sage-500 focus:ring-2 focus:ring-sage-500 focus:outline-none"
                >
                  <option value="">Choose your attendance</option>
                  <option value="ceremony-only">Ceremony only</option>
                  <option value="ceremony-reception">Ceremony + Reception</option>
                  <option value="full-celebration">The whole celebration + afterparty!</option>
                  <option value="unsure">I&apos;m not sure yet</option>
                </select>
              </div>

              <div>
                <label className="block text-sm font-medium text-cream-100 mb-2">
                  Any seating preferences for the ceremony?
                </label>
                <select
                  value={preferences.ceremonySeating}
                  onChange={(e) => setPreferences(prev => ({ ...prev, ceremonySeating: e.target.value }))}
                  className="w-full px-4 py-3 rounded-lg border border-sage-600 bg-sage-800 text-cream-100 focus:border-sage-500 focus:ring-2 focus:ring-sage-500 focus:outline-none"
                >
                  <option value="">Choose seating preference</option>
                  <option value="front-row">Front row (family/VIP)</option>
                  <option value="near-front">Near the front</option>
                  <option value="middle">Middle section</option>
                  <option value="back">Back (easy exit access)</option>
                  <option value="aisle">Aisle seat preferred</option>
                  <option value="no-preference">No preference</option>
                </select>
              </div>

              <div>
                <label className="block text-sm font-medium text-cream-100 mb-3">
                  What reception activities interest you most? (Select all that apply)
                </label>
                <div className="grid grid-cols-2 md:grid-cols-3 gap-3">
                  {receptionOptions.map((activity) => (
                    <label key={activity} className="flex items-center">
                      <input
                        type="checkbox"
                        checked={preferences.receptionActivities.includes(activity)}
                        onChange={() => handleActivityToggle(activity)}
                        className="mr-2 text-sage-600"
                      />
                      <span className="text-cream-200 text-sm">{activity}</span>
                    </label>
                  ))}
                </div>
              </div>

              <div>
                <label className="block text-sm font-medium text-cream-100 mb-2">
                  Any special photography requests or moments you&apos;d like captured?
                </label>
                <textarea
                  value={preferences.photographyPreferences}
                  onChange={(e) => setPreferences(prev => ({ ...prev, photographyPreferences: e.target.value }))}
                  rows={3}
                  className="w-full px-4 py-3 rounded-lg border border-sage-600 bg-sage-800 text-cream-100 placeholder-cream-300 focus:border-sage-500 focus:ring-2 focus:ring-sage-500 focus:outline-none"
                  placeholder="Group photos, candid moments, specific locations..."
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-cream-100 mb-2">
                  What&apos;s your energy level for wedding day celebrations? (1-10)
                </label>
                <div className="flex items-center space-x-4">
                  <span className="text-cream-300">Chill</span>
                  <input
                    type="range"
                    min="1"
                    max="10"
                    value={preferences.energyLevel}
                    onChange={(e) => setPreferences(prev => ({ ...prev, energyLevel: parseInt(e.target.value) }))}
                    className="flex-1"
                  />
                  <span className="text-cream-300">Party!</span>
                  <span className="text-xl text-cream-100 ml-2">{preferences.energyLevel}/10</span>
                </div>
              </div>

              <div>
                <label className="block text-sm font-medium text-cream-100 mb-2">
                  Any special moments or traditions you&apos;d like to share or participate in?
                </label>
                <textarea
                  value={preferences.specialMoments}
                  onChange={(e) => setPreferences(prev => ({ ...prev, specialMoments: e.target.value }))}
                  rows={3}
                  className="w-full px-4 py-3 rounded-lg border border-sage-600 bg-sage-800 text-cream-100 placeholder-cream-300 focus:border-sage-500 focus:ring-2 focus:ring-sage-500 focus:outline-none"
                  placeholder="Toasts, special dances, cultural traditions, surprise moments..."
                />
              </div>

              <div className="flex justify-between items-center pt-6">
                <Link 
                  href="/adventure/day-1"
                  className="text-cream-300 hover:text-cream-100 transition-colors"
                >
                  ‚Üê Back to Tuesday
                </Link>
                
                <button
                  onClick={handleContinue}
                  disabled={!preferences.weddingAttendance}
                  className="bg-sage-600 text-white py-3 px-8 rounded-lg font-medium hover:bg-sage-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  Continue to Thursday Adventures ‚Üí
                </button>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  );
}
